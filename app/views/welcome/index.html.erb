
<%= form_tag do %><!-- <form class="form">horizontal vertical-->
  <fieldset>
    <legend>登入</legend>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <% if cookies[:email] == "admin" && cookies[:password] == "123456" %>
          <input type="text" class="form-control" id="inputEmail" placeholder="Email" name="email" value="admin">
        <% else %>
          <input type="text" class="form-control" id="inputEmail" placeholder="Email" name="email">
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Password</label>
      <div class="col-lg-10">
        <% if cookies[:email] == "admin" && cookies[:password] == "123456"%>
          <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password" value="123456">
        <% else %>
          <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
        <% end %>
        <div class="checkbox">
          <label>
            <input type="checkbox"> 記住
          </label>
        </div>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <!-- <button type="reset" class="btn btn-default">Cancel</button> -->
        <button type="submit" class="btn btn-primary">登入</button>
      </div>
    </div>
  </fieldset>
<% end %><!-- </form> -->